<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ECF4FF"
    tools:context=".MenuPage">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:background="@color/black"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="9:41"
            android:textSize="20dp"
            android:layout_margin="7dp"
            android:textColor="#EFF1FE"></TextView>
        <ImageView
            android:layout_marginTop="7dp"
            android:layout_marginLeft="250dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@drawable/cellularconnection"></ImageView>
        <ImageView
            android:layout_marginTop="7dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@drawable/wifi"></ImageView>
        <ImageView
            android:layout_marginTop="7dp"
            android:layout_marginLeft="7dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@drawable/capacity"></ImageView>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"

        android:layout_height="35dp">
        <TextView
            android:textSize="14dp"
            android:paddingStart="200dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Menu"
            android:textColor="@color/white"></TextView>
        <ImageView

            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:background="@drawable/restaurant"></ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:background="@drawable/roundedlinearlayout1">
        <TextView
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Search in "></TextView>
        <TextView
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text=" Sahil Hotel"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
       android:paddingStart="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Veg only"
            android:textColor="@color/white"
            android:layout_marginStart="30dp"></TextView>
        <LinearLayout
            android:layout_marginStart="5dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/toggle1">
        <ImageView
            android:layout_marginRight="-40dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/toggle2"></ImageView>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Non-Veg only"
            android:textColor="@color/white"
            android:layout_marginStart="30dp"></TextView>
        <LinearLayout
            android:layout_marginStart="5dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/toggle1">
            <ImageView
                android:layout_marginRight="-40dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/toggle2"></ImageView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
    <LinearLayout
        android:layout_height="80dp"
        android:layout_width="match_parent"
      android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:paddingStart="20dp"
            android:text="Recommended (8)"
            android:textStyle="bold"
            android:textSize="17dp"
            android:textColor="#3A3A3A"
            android:layout_margin="10dp"
            ></TextView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_keyboard_arrow_down_24"></ImageView>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="80dp">
