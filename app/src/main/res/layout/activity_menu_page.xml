            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:paddingTop="5dp"
            android:textColor="#F37B17"
            android:paddingStart="40dp"></TextView>    </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="80dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Chicken Tikka (6 pcs)"
                android:textStyle="bold"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:paddingStart="30dp"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Rs. 100"
                android:textSize="14dp"
                android:paddingStart="30dp"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Starter"
                android:textSize="14dp"
                android:paddingStart="30dp"
                android:textColor="#F37B17"
                ></TextView>
        </LinearLayout>
        <LinearLayout
            android:background="#EFF1FE"
            android:layout_marginStart="120dp"
            android:layout_width="96dp"
            android:layout_height="34dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                android:paddingTop="5dp"
                android:textColor="#F37B17"
                android:paddingStart="40dp"></TextView>    </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="80dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Chicken Tikka (6 pcs)"
                android:textStyle="bold"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:paddingStart="30dp"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Rs. 100"
                android:textSize="14dp"
                android:paddingStart="30dp"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Starter"
                android:textSize="14dp"
                android:paddingStart="30dp"
                android:textColor="#F37B17"
                ></TextView>
        </LinearLayout>
        <LinearLayout
            android:background="#EFF1FE"
            android:layout_marginStart="120dp"
            android:layout_width="96dp"
            android:layout_height="34dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                android:paddingTop="5dp"
                android:textColor="#F37B17"
                android:paddingStart="40dp"></TextView>    </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="80dp">
        <TextView
            android:paddingStart="20dp"
            android:layout_width="200dp"
            android:layout_margin="10dp"
            android:layout_height="25dp"
            android:text="Non Veg Burgers (8)"
            android:textColor="#3A3A3A"
            android:textSize="17dp"
            android:textStyle="bold"></TextView>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="130dp"
            android:background="@drawable/blackroundedlinearlayout">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingRight="200dp"
                android:paddingTop="100dp"
                android:background="@drawable/fork">

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>



</LinearLayout>
