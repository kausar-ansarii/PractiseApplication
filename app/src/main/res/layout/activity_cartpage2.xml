<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cartpage"
    android:orientation="vertical"
    android:background="#ECF4FF">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/black">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="28dp"
            android:text="Cart"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:drawableLeft="@drawable/ic_baseline_chevron_left_24"
            >
        </EditText>
    </LinearLayout>


    <LinearLayout
        android:background="@drawable/roundedlinearlayout"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_height="165dp"
        android:orientation="vertical"
        android:layout_width="388dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_height="100dp"
                android:layout_width="270dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:paddingStart="20dp"
                    android:text="Manchurian pizza"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:textColor="#3A3A3A"
                    android:layout_margin="10dp"
                    >
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:paddingStart="20dp"
                    android:text="Medium,Classic Hand Tossed,Cheese"
                    android:textSize="17dp"
                    android:textColor="#3A3A3A"
                    android:layout_marginLeft="10dp"
                    >
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:paddingStart="20dp"
                    android:text="Rs 120"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:textColor="#F17006"
                    android:layout_margin="10dp"
                    >
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="96dp"
                android:layout_height="34dp"
                android:orientation="horizontal"
                android:layout_margin="15dp"
                android:background="@drawable/roundedlinearlayout1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:layout_margin="5dp"
                    android:paddingStart="10dp"
                    android:textColor="#F37B17"
                    android:textSize="14dp"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_margin="5dp"
                    android:paddingStart="10dp"
                    android:textColor="#F37B17"
                    android:textSize="14dp"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:layout_margin="5dp"
                    android:paddingStart="10dp"
                    android:textColor="#F37B17"
                    android:textSize="14dp"></TextView>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:background="@drawable/line">
        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:text="Write any request for the restaurant"
            android:textSize="18dp"
            android:layout_marginStart="19dp"
            android:textColor="#3A3A3A"
            >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/roundedlinearlayout"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_height="165dp"
        android:orientation="vertical"
        android:layout_width="388dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_height="100dp"
                android:layout_width="270dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:paddingStart="20dp"
                    android:text="Manchurian pizza"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:textColor="#3A3A3A"
                    android:layout_margin="10dp"
                    >
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:paddingStart="20dp"
                    android:text="Medium,Classic Hand Tossed,Cheese"
                    android:textSize="17dp"
                    android:textColor="#3A3A3A"
                    android:layout_marginLeft="10dp"
                    >
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:paddingStart="20dp"
                    android:text="Rs 120"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:textColor="#F17006"
                    android:layout_margin="10dp"
                    >
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="96dp"
                android:layout_height="34dp"
                android:orientation="horizontal"
                android:layout_margin="15dp"
                android:background="@drawable/roundedlinearlayout1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:layout_margin="5dp"
                    android:paddingStart="10dp"
                    android:textColor="#F37B17"
                    android:textSize="14dp"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_margin="5dp"
                    android:paddingStart="10dp"
                    android:textColor="#F37B17"
                    android:textSize="14dp"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:layout_margin="5dp"
                    android:paddingStart="10dp"
                    android:textColor="#F37B17"
                    android:textSize="14dp"></TextView>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:background="@drawable/line">
        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:text="Write any request for the restaurant"
            android:textSize="18dp"
            android:layout_marginStart="19dp"
            android:textColor="#3A3A3A"
            >
        </TextView>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="Bill Details"
        android:textSize="20dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:textColor="#3A3A3A"
        ></TextView>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="388dp"
        android:layout_height="165dp"
        android:background="@drawable/roundedlinearlayout"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:text="Item Total"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_margin="20dp"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Rs.240"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_margin="20dp"
                ></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:text="Item Discount"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_margin="20dp"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Rs.100"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="#00AD45"
                android:layout_margin="20dp"
                ></TextView>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:background="@drawable/line"></ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:text="To Pay"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_margin="20dp"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Rs.140"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="#F17006"
                android:layout_margin="20dp"
                ></TextView>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="150dp"
        android:background="@color/white"
        android:layout_height="66dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="218dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="RS 120"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="subtotal"
                    android:textSize="14dp"

                    android:textColor="#F17006"
                    android:layout_marginStart="10dp"
                    ></TextView>
            </LinearLayout>
            <Button
                android:layout_width="160dp"
                android:layout_margin="10dp"
                android:layout_height="44dp"
                android:text="Proceed to pay"
                android:textSize="10dp"
                android:textColor="@color/white"
                android:background="@drawable/roundedbutton"></Button>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</ScrollView>