<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Select_Location"
    android:orientation="vertical">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/map"
        ></ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="325dp"
        android:layout_alignBottom="@id/map"
        android:background="@drawable/linearradius2"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Select Location"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Choose location to proceed"></TextView>

        <EditText
            android:layout_width="390dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:background="@drawable/roundededittext"
            android:drawableRight="@drawable/ic_baseline_location_on_24"
            android:paddingLeft="20dp"
            android:paddingEnd="20dp"
            android:text="Kaneri, Bhiwandi, Mahar..."></EditText>

        <Button
            android:layout_width="390dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/btnColor"
            android:text="SUBMIT"
            android:textColor="@color/white"></Button>
    </LinearLayout>
</RelativeLayout>